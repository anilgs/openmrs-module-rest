<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//OpenMRS//DTD OpenMRS Config 1.0//EN" "http://resources.openmrs.org/doctype/config-1.0.dtd">

<module configVersion="1.0">
	
	<!-- Base Module Properties -->
	<id>restModule</id>
	<name>@MODULE_NAME@</name>
	<version>@MODULE_VERSION@</version>
	<package>org.openmrs.module.restmodule</package>
	<author>Ben Wolfe</author>
	<description>
			Very Basic OpenMRS Rest Module
	</description>

	<activator>org.openmrs.module.restmodule.RestModuleActivator</activator>
	
